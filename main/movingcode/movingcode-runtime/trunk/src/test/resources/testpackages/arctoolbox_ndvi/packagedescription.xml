<mc:packageDescription xmlns:mc="http://gis.geo.tu-dresden.de/movingcode/1.0.0"
	xmlns:ows="http://www.opengis.net/ows/1.1" xmlns:wps="http://www.opengis.net/wps/1.0.0"
	xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xml="http://www.w3.org/XML/1998/namespace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://gis.geo.tu-dresden.de/movingcode/1.0.0
						http://gis.geo.tu-dresden.de/movingcode/1.0.0/descriptions/MovingCodePackage.xsd">
	<mc:contractedFunctionality>
		<mc:wpsProcessDescription
			wps:processVersion="1">
			<ows:Identifier>de.tu-dresden.geo.gis.algorithms.test.ndvi</ows:Identifier>
			<ows:Title>NDVI process</ows:Title>
			<ows:Abstract>Computes the NDVI by (NIR-RED)/(NIR+RED)</ows:Abstract>
			<DataInputs>
				<Input minOccurs="1" maxOccurs="1">
					<ows:Identifier>NIR</ows:Identifier>
					<ows:Title>Near infrared band</ows:Title>
					<ows:Abstract>Near infrared band</ows:Abstract>
					<ComplexData>
						<Default>
							<Format>
								<MimeType>application/geotiff</MimeType>
							</Format>
						</Default>
						<Supported>
							<Format>
								<MimeType>application/geotiff</MimeType>
							</Format>
						</Supported>
					</ComplexData>
				</Input>
				<Input minOccurs="1" maxOccurs="1">
					<ows:Identifier>RED</ows:Identifier>
					<ows:Title>Red band</ows:Title>
					<ows:Abstract>Red band</ows:Abstract>
					<ComplexData>
						<Default>
							<Format>
								<MimeType>application/geotiff</MimeType>
								<Schema></Schema>
							</Format>
						</Default>
						<Supported>
							<Format>
								<MimeType>application/geotiff</MimeType>
								<Schema></Schema>
							</Format>
						</Supported>
					</ComplexData>
				</Input>
			</DataInputs>
			<ProcessOutputs>
				<Output>
					<ows:Identifier>NDVI</ows:Identifier>
					<ows:Title>NDVI</ows:Title>
					<ows:Abstract>NDVI</ows:Abstract>
					<ComplexOutput>
						<Default>
							<Format>
								<MimeType>application/geotiff</MimeType>
								<Schema></Schema>
							</Format>
						</Default>
						<Supported>
							<Format>
								<MimeType>application/geotiff</MimeType>
								<Schema></Schema>
							</Format>
						</Supported>
					</ComplexOutput>
				</Output>
			</ProcessOutputs>
		</mc:wpsProcessDescription>
	</mc:contractedFunctionality>
	<mc:contractedPlatform mc:platformId="http://gis.geo.tu-dresden.de/movingcode/platformregistry/platform/arcgis-10.0-analysis"/>
	<mc:contractedInfrastructure/>
